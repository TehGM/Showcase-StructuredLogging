{
  "Logging": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "System.Net.Http": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2,
          "fileSizeLimitBytes": 1048576,
          "rollOnFileSizeLimit": true,
          "buffered": false
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-json.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2,
          "fileSizeLimitBytes": 1048576,
          "rollOnFileSizeLimit": true,
          "buffered": false,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "MongoDBBson",
        "Args": {
          "collectionName": "StructuredLogging",
          "batchPostingLimit": 1
        }
      }
    ]
  }
}
